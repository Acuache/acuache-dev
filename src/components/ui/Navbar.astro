---
const LINKS = [
  {
    label: "Inicio",
    to: "#",
  },
  {
    label: "Proyectos",
    to: "#",
  },
  {
    label: "Sobre mi",
    to: "#",
  },
];

const lastName = ["A", "C", "A", "C", "H", "E"];
---

<header
  id="main-nav"
  class="py-2 flex items-center justify-between sm:py-3 fixed top-0 left-0 z-20 w-full pb-5 duration-300"
>
  <div class="max-w-5xl w-full mx-auto flex items-center justify-between">
    <div class="flex gap-1 group">
      {
        lastName.map((letter, i) => (
          <h3
            class="inline-block text-xl font-semibold tracking-wide transition-transform duration-300 ease-out group-hover:-translate-y-1 group-hover:rotate-3 group-hover:scale-110 group-hover:text-st group-hover:drop-shadow-[0_0_10px_rgba(248,113,113,0.6)]"
            style={`transition-delay: ${i * 50}ms`}
          >
            {letter}
          </h3>
        ))
      }
    </div>
    <nav>
      <ul class="flex gap-5">
        {
          LINKS.map((link) => (
            <li>
              <a href={link.to}>{link.label}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  #main-nav {
    width: 100%;
    background: transparent;
    backdrop-filter: blur(0);
    border-bottom: 1px solid transparent;
    box-shadow: none;
  }

  #main-nav.is-scrolled {
    background: rgba(8, 8, 8, 0.85);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(12px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.35);
  }
</style>

<script>
  const initNavScroll = () => {
    const nav = document.getElementById("main-nav");
    if (!nav) return;

    const handleScroll = () => {
      nav.classList.toggle("is-scrolled", window.scrollY > 10);
    };

    handleScroll();
    window.addEventListener("scroll", handleScroll, { passive: true });
  };

  document.addEventListener("astro:page-load", initNavScroll);
</script>
